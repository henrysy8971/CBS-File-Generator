<?xml version="1.0" encoding="UTF-8"?>
<beanio xmlns="http://www.beanio.org/2012/03">

    <!-- ORDER_INTERFACE BeanIO Mapping with Parent-Child Hierarchy -->
    <stream name="interfaceStream" format="xml" xmlns:tns="http://www.example.com/order">
        
        <!-- Parent Record - Order -->
        <record name="order" 
                class="com.silverlakesymmetri.cbs.fileGenerator.dto.OrderDto"
                minOccurs="0" maxOccurs="unbounded">
            
            <!-- Order Fields -->
            <field name="orderId" type="string" required="true"/>
            <field name="orderNumber" type="string" required="true"/>
            <field name="orderAmount" type="decimal"/>
            <field name="orderDate" type="string"/>
            <field name="customerId" type="string"/>
            <field name="customerName" type="string"/>
            <field name="status" type="string" default="ACTIVE"/>
            
            <!-- Child Records - Line Items (nested collection) -->
            <record name="lineItems" 
                    collection="list"
                    class="com.silverlakesymmetri.cbs.fileGenerator.dto.LineItemDto"
                    minOccurs="0" maxOccurs="unbounded">
                
                <field name="lineItemId" type="string" required="true"/>
                <field name="productId" type="string" required="true"/>
                <field name="productName" type="string"/>
                <field name="quantity" type="int"/>
                <field name="unitPrice" type="decimal"/>
                <field name="lineAmount" type="decimal"/>
                <field name="status" type="string" default="ACTIVE"/>
            </record>
        </record>

    </stream>

</beanio>
